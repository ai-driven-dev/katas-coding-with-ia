{
  "App": {
    "Urls": "http://*:7000"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CORS": {
    "PolicyName": "TrainOfficeApp",
    "Origins": "*",
    "AllowAnyOrigin": "true",
    "AllowAnyMethod": "true",
    "AllowAnyHeader": "true"
  },
  "ConnectionStrings": {
    "PostgreSqlConnection": "Host=localhost;Database=trainoffice;Username=myuser;Password=mypassword"
  },
  "DatabaseProvider": "InMemoryDb", //can be: PostgreSql, InMemoryDb, InMemory
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TrainOffice"
    }
  }
}